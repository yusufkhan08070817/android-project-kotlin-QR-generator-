<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2D2D2"
    tools:context=".MainActivity">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="12dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/manback"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_alignParentTop="true"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/qr"
            android:id="@+id/qr"
            />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/edit"
            android:layout_alignBottom="@+id/qr"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="158dp"
            android:layout_toEndOf="@id/qr"
            android:src="@drawable/edit" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/back"
            android:layout_alignBottom="@+id/qr"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="158dp"
            android:visibility="gone"
            android:layout_toEndOf="@id/qr"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/qr"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/download"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@id/qr"
            android:src="@drawable/download" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/qr"
            android:id="@+id/qrtextlay"
            android:layout_margin="20dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="12dp"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
               android:background="@color/white"
               android:hint="Add text for qr code"
                android:gravity="top"
                android:padding="10dp"
                android:id="@+id/qrtext"

                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/qr"
            android:id="@+id/colorchose"
            android:layout_margin="20dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="12dp"
            android:visibility="visible"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:columnCount="6"
                android:padding="10dp"
                android:id="@+id/colorgrid"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/gray"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/red"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkRed"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightRed"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/green"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkGreen"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightGreen"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/blue"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkBlue"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightBlue"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/yellow"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkYellow"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightYellow"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/purple"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkPurple"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightPurple"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/orange"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/darkOrange"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/lightOrange"
                    android:layout_margin="10dp"
                    app:cardElevation="12dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="@color/gray"
                    android:layout_margin="10dp"
